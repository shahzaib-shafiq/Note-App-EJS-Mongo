<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-2 text-white">
      <a href="/" class="text-blue-500">Back to Home</a>
      <h1 class="text-3xl mt-4 tracking-tighter mb-3">All Users</h1>
      <div class="users flex overflow-x-auto gap-3">
        <% if (users && users.length > 0) { %>
          <% users.forEach(function(user) { %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
              <div class="w-full h-72 bg-zinc-500 rounded-lg bg-zinc-700 overflow-hidden">
                <img
                  class="w-full h-full object-cover object-top"
                  src="<%= user.image %>"
                  alt=""
                />
              </div>
              <h3 class="text-2xl mt-3 tracking-tighter"><%= user.name %></h3>
              <h5 class="text-zinc-500"><%= user.email %></h5>
              <div class="flex gap-3 mt-10">
                <a href="/edit/<%=user._id%>" class="text-zinc-200">Edit User</a>
                <a href="/delete/<%= user.id %>" class="text-red-500">Delete User</a>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <h3>No users exist</h3>
        <% } %>
      </div>
    </div>
    
  </body>
</html>
